<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.itog_lab.android.sample.SimpleDemoKit"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="10" />

    <application android:icon="@drawable/ic_launcher_demokit" android:label="@string/app_name">
    	<uses-library android:name="com.android.future.usb.accessory" />
        <activity android:name=".SimpleDemoKit"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.itog_lab.android.sample.SimpleDemoKit.UsbAccessoryActivity" android:label="DemoKit"
			android:taskAffinity="" android:launchMode="singleInstance">
			<intent-filter>
				<action android:name="android.hardware.usb.action.USB_ACCESSORY_ATTACHED" />
			</intent-filter>

			<meta-data android:name="android.hardware.usb.action.USB_ACCESSORY_ATTACHED"
				android:resource="@xml/accessory_filter" />
		</activity>

    </application>
</manifest>